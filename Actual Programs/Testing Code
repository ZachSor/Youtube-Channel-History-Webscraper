def testing_code():
    masterArray = []
    yearArray = [0,0,0]

    subArray1 = [0,0,0]
    subArray2 = [0,0,0]
    subArray3 = [0,0,0]

    for i in range(0,2):                    # creator ??????            The problem is that it isn't assigning the values of the creator index to be independent from each other
        masterArray.append(0)
        for j in range (0,3):               # all years

            if j == 0:   #2018                   # all months / subs
                for k in range (0,len(subArray1)):
                    userInput = input("what is the monthly change of subs in the creator: ")
                    subArray1[k] = userInput

        
            elif j == 1:    #2019
                for l in range (0,len(subArray2)):
                    userInput = input("what is the monthly change of subs in the creator: ")
                    subArray2[l] = userInput
        
            elif j == 2:    #2020
                for a in range (0,len(subArray3)):
                    userInput = input("what is the monthly change of subs in the creator: ")
                    subArray3[a] = userInput

        yearArray = [subArray1,subArray2,subArray3]
        
        print(yearArray)

        masterArray[i] = yearArray
        
        
    
    print(masterArray)

