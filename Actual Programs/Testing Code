def easyMasterArray():
    array1 = [0,1,2,3,4]
    array2 = [5,6,7,8,9]
    array3 = [10,11,12,13,14]

    masterArray = []
    masterArray.append(array1)
    masterArray.append(array2)
    masterArray.append(array3)

    print(masterArray)
